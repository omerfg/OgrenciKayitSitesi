@using StudentRegisterWebSite.Models.Siniflar
@model List<Hakkimizda>
<section class="w3ls-bnrbtm py-5" id="about">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="title-w3 mb-md-5 mb-sm-4 mb-2 text-center font-weight-bold">Hakkımızda</h3>
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-lg-6 text-center">
                    <img src="@x.ImageUrl" alt="about" class="img-fluid mt-4" />
                </div>
                <div class="col-lg-6 pr-xl-5 mt-4">
                    <h3 class="title-sub mb-4">@x.Baslik</h3>
                    <p class="sub-para">
                        @x.Icerik
                    </p>
                </div>   
             }
            </div>
    </div>
</section>
