@using StudentRegisterWebSite.Models.Siniflar
@model List<Istatistik>
<div class="middlesection-w3pvt py-sm-5 pt-sm-0 pt-5 mt-5" id="stats">
    <div class="container py-xl-5 py-lg-3">
        <div class="offset-lg-4 offset-sm-3 left-build-wthree aboutright-w3pvtwthree">
            <h3 class="title-w3-2 title-w3 mb-md-5 mb-4 font-weight-bold">İstatistiğimiz</h3>
            <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-4 w3layouts_stats_left w3_counter_grid">
                    <h4 class="counter">@x.OgretmenSayisi</h4>
                    <p class="para-text-w3ls text-li let">Öğretmen Sayımız</p>
                </div>
                <div class="col-4 w3layouts_stats_left w3_counter_grid2">
                    <h4 class="counter">@x.SinifOdaSayisi</h4>
                    <p class="para-text-w3ls text-li let">Sınıf & Oda Sayımız</p>
                </div>
                <div class="col-4 w3layouts_stats_left w3_counter_grid1">
                    <h4 class="counter">@x.OkulOtobüsSayısı</h4>
                    <p class="para-text-w3ls text-li let">Okul Otobüsü Sayımız</p>
                </div>
            }
            </div>
        </div>
    </div>
    <div class="property-paper">
        <img src="~/web/images/img3.png" alt="" class="img-fluid agents-w3" />
    </div>
</div>
